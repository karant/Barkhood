<%- unless dog.invitations.empty? -%>
  <h2>Invitations for groups</h2>
  <ul class="list requests small">
    <%- dog.invitations.each do |invitation| -%>
      <%- mem = Membership.mem(dog, invitation.group) -%>
      <li>
        <div class="profile-image">
          <%= image_link invitation.group %>
        </div>
        <p>Invitation for
        <%= group_link invitation.group %></p>
        <p class="meta published">
          <%= time_ago_in_words(invitation.created_at) %>
          ago
        </p>
        <p>
          <%= link_to "Respond", edit_membership_path(mem) %> |
          <%= link_to "View group", group_path(invitation.group) %>
        </p>
      </li>
    <%- end -%>
  </ul>
<%- end -%>