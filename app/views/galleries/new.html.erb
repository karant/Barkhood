<%- column_div :type => :primary do -%>
  <h2>New gallery for <%=h @gallery.owner.name %></h2>

  <%- form_for :gallery, :url => parent_galleries_path(@gallery.owner) do |f| -%>
    <div class="form_row">
      <label for="title">Title</label>
      <%= f.text_field :title %>
    </div>
    
    <%= set_focus_to "gallery_title" %>

    <div class="form_row">
      <label for="description">Description</label>
      <%= f.text_area :description, :rows => 5 %>
    <div>

    <div class="form_row">
      <%= f.submit "Create", :class => "button" %>
      <%= link_to "Cancel", parent_galleries_path(@gallery.owner) %>
    </div>
  <%- end -%>
<%- end -%>
