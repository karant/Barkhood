<%= error_messages_for :event %>

<% form_for :event, :url => parent_events_path do |f| %>
<div class="form_row full">
  <%= f.label :organizer %>
  <%= f.select :dog_id, @dogs.map{|dog| [dog.name, dog.id]} %>
</div>
<div class="form_row full">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="form_row full">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>
<div class="form_row">
  <%= f.label :start_time %>
  <%= f.datetime_select :start_time, {:minute_step => 15} %>
</div>
<div class="form_row">
  <%= f.label :end_time %>
  <%= f.datetime_select :end_time, {:include_blank => true, :default => nil, :minute_step => 15} %>
</div>
<div class="form_row full">
  <%= f.label :reminder %>
  <%= f.check_box :reminder %> 
</div>
<div class="form_row full">
  <%= f.label :privacy %>
  <%= f.select :privacy, @privacies %> 
</div>
<div class="form_row">
  <%= f.submit @event.new_record? ? "Create" : "Update" %>
</div>
<% end %>
