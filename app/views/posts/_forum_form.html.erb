<% form_for :post, :url => url, :html => { :method => method }  do |f| %>
  <div class="form_row">
  	<%= f.label :from %>
    <%= f.select :dog_id, current_person.dogs.map{|d| [d.name, d.id]} %>
  </div>

  <div class="form_row">
    <%= f.text_area :body %>
  </div>

  <div class="form_row">
    <%= f.submit "Submit", :class => "button" %>
  </div>
<% end %>