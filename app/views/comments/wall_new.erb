<h2>Wall comment</h2>

<%= error_messages_for :comment %>

<h3>Leave a comment</h3>

<% form_for :comment, :url => dog_comments_path(@dog) do |f| %>
  <div class="form_row">
  	<%= f.label :from %>
    <%= f.select :commenter_id, current_person.dogs.map{|d| [d.name, d.id]} %>
  </div>	

  <div class="form_row">
    <%= f.text_area :body %>
  </div>
  
  <div class="form_row">
    <%= submit_tag "Submit", :class => "button" %>
  </div>
<% end %>