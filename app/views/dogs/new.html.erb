<%- column_div :type => :primary do -%>
  <h2>Create a dog's profile</h2>

  <%= error_messages_for :dog %>

  <% form_for @dog do |f| -%>

  <div class="form_row">
    <label for="dog_name">
      Name
    </label>
    <%= f.text_field :name, :maxlength => Dog::MAX_NAME %>
    <%= set_focus_to "dog_name" %>  
  </div>
  
  <div class="form_row">
    <label for="dog_gender">
      Gender
    </label>
    <%= f.select :gender, ['Female', 'Male'] %> 
  </div>  

  <div class="form_row">
    <label for="dog_breed">
    	Breed
	</label>
    <%= f.select :breed_id, @breeds.map{|b| [b.name, b.id]} %>
  </div>
  
  <div class="form_row">
    <label for="dog_dob">
    	Date of birth
	</label>
    <%= f.date_select :dob %>
  </div>  
  
  <div class="form_row">
    <label for="dog_description">
    	Description
	</label>
	<p><%= formatting_note %></p>
    <%= f.text_area :description %>
  </div> 
  
  <div class="form_row">
    <%= submit_tag 'Create Profile', :class => "button" %>
  </div>
  <% end %>
<%- end -%>
