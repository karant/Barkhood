<div id="header-wrap">
  <div id="header">
	<%= link_to image_tag('/images/logo.png'), home_url, { :class => 'logo' } %>
    <ul id="nav">
      <%- menu.each do |link| -%>
        <%= menu_li link %>
      <%- end -%>
    </ul>
    <p class="welcome">
      <%- if logged_in? -%>
        Welcome!
        (<%= link_to "Sign out", logout_path %>)
        <%- if current_person.admin? -%>
          <br />
          <%- if admin_view? -%>
            <%= link_to("Standard view", home_path) %>
          <%- else -%>
            <%= link_to("Admin view", admin_preferences_path) %>
          <%- end -%>
        <%- end -%>
      <%- else -%>
        <%= link_to "Sign in", login_path %> or
        <%= link_to "Sign up", signup_path %>
        <%- if global_prefs.can_send_email? -%>
        <br />
        <%= link_to "I forgot my password",
                     new_password_reminder_path %>
        <%- end -%>             
      <%- end -%>
    </p>
  </div>
</div>